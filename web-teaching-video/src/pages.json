{
    "easycom": {
        "autoscan": true,
        // 注意一定要放在custom里，否则无效，https://ask.dcloud.net.cn/question/131175
        "custom": {
            "^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
            "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue",
            "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue"
        }
    },
    "pages": [
        //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/login/login",
            "style": {
                "navigationBarTitleText": "登录"
            }
        },
        {
            "path": "pages/index/index",
            "style": {
                "enablePullDownRefresh": true,
                "navigationBarTitleText": "主页"
            }
        },
        {
            "path": "pages/video/fileVideo",
            "style": {
                "navigationBarTitleText": "上传视频"
            }
        },
        {
            "path": "pages/chat/chat",
            "style": {
                "navigationBarTitleText": "ai询问"
            }
        },
        {
            "path": "pages/video/video",
            "style": {
                "enablePullDownRefresh": true,
                "navigationBarTitleText": "视频界面"
            }
        },
        {
            "path": "pages/my/my",
            "style": {
                "navigationBarTitleText": "我的详请"
            }
        },
        {
            "path": "pages/reg/reg",
            "style": {
                "navigationBarTitleText": "注册"
            }
        }
    ],
    "tabBar": {
        "color": "#A2A2A2",
        "selectedColor": "#2b92ff",
        "backgroundColor": "#ffffff",
        "fontSize": "11px",  
        "list": [
            {
                "text": "首页",
                "pagePath": "pages/index/index",
                "iconPath": "static/tabbar/zhuye.png",
                "selectedIconPath": "static/tabbar/click-zhuye.png"  
            },
            {
                "text": "AI询问",
                "pagePath": "pages/chat/chat",
                "iconPath": "static/tabbar/wuguan.png",
                "selectedIconPath": "static/tabbar/click-wuguan.png"  
            },
            {
                "text": "我的详请",
                "pagePath": "pages/my/my" ,
                "iconPath": "static/tabbar/wode.png",
                "selectedIconPath": "static/tabbar/click-wode.png"
            }
        ]
    },
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "视频解析",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    }
}
